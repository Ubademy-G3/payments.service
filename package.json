{
  "name": "payments.service",
  "version": "1.0.0",
  "description": "PaymentsService es un proyecto hecho con fines educativos donde los usuarios pueden crear suscribirse a cursos online. NO USAR EN PRODUCCION!",
  "author": "",
  "license": "ISC",
  "main": "index.js",
  "dependencies": {
    "hardhat": "2.0.6",
    "hardhat-deploy": "0.7.4",
    "hardhat-deploy-ethers": "0.3.0-beta.7",
    "solc": "0.7.4",
    "express": "^4.17.1",
    "jsonschema": "^1.4.0",
    "pg": "^8.0.3",
    "sequelize": "^5.21.3",
    "swagger-ui": "^3.52.4",
    "swagger-ui-express": "^4.1.6",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "12.0.1",
    "@ethersproject/abstract-signer": "5.0.6",
    "@ethersproject/bignumber": "5.0.8",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@0.3.0-beta.7",
    "@nomiclabs/hardhat-solhint": "2.0.0",
    "@nomiclabs/hardhat-waffle": "2.0.0",
    "@openzeppelin/contracts": "3.4.0",
    "@typechain/ethers-v5": "5.0.0",
    "@types/chai": "4.2.13",
    "@types/fs-extra": "9.0.1",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.25",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "bignumber.js": "9.0.1",
    "chai": "4.2.0",
    "dotenv": "8.2.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "6.12.0",
    "eth-revert-reason": "^1.0.3",
    "ethereum-waffle": "3.2.0",
    "ethers": "^5.5.1",
    "fastify": "3.14.2",
    "fs-extra": "9.0.1",
    "hardhat-contract-sizer": "2.0.2",
    "hardhat-docgen": "1.0.3",
    "hardhat-gas-reporter": "1.0.4",
    "hardhat-preprocessor": "0.1.2",
    "hardhat-prettier": "0.0.1",
    "hardhat-typechain": "0.3.4",
    "husky": "5.0.9",
    "leafleth": "0.0.9",
    "prettier": "2.2.1",
    "prettier-plugin-solidity": "1.0.0-beta.5",
    "shelljs": "0.8.4",
    "solhint": "3.3.2",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.12",
    "standard-version": "^9.3.2",
    "ts-generator": "0.1.1",
    "ts-node": "9.1.1",
    "typechain": "4.0.1",
    "typescript": "4.1.3",
    "nodemon": "^1.19.1",
    "supertest": "^6.1.6",
    "jest": "^27.2.4",
    "codecov": "^3.8.3"
  },
  "comments": {
    "dependencies": "hardhat-solhint includes an old version of solhint, that's why specific solhint dependency is added"
  },
  "types": "types/index.d.ts",
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run compile",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "NODE_ENV=testing PAYMENTSERVICE_APIKEY=abc123 jest --verbose --coverage",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:js": "eslint --ext .js",
    "lint:sol": "solhint --config .solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:list-different": "prettier --config .prettierrc --list-different \"**/*.{js,json,md,sol,ts}\"",
    "size-contracts": "hardhat size-contracts",
    "docgen": "hardhat docgen",
    "test": "NODE_ENV=testing PAYMENTSERVICE_APIKEY=abc123 jest && codecov",
    "test:hh": "hardhat test",
    "deploy-kovan": "hardhat deploy --network kovan",
    "deploy-local": "hardhat deploy --network hardhat",
    "start": "node index.js",
    "dev": "nodemon -L",
    "release": "standard-version"
  }
}
